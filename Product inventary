#include <iostream>
using namespace std;

class Product {
private:
    double price;
    int stock;

public:
    string productName;
    string category;

    //constructor
    Product(string name, string cat, double pr, int st) {
        productName = name;
        category = cat;
        price = pr;
        stock = st;
    }
     
     //setter of price
    void setPrice(double pr) {
        if (pr >= 0) price = pr;
        else cout << "Invalid price!" << endl;
    }
     
     //getter of price
    double getPrice() const {
        return price;
    }
     
     //setter of stock
    void setStock(int st) {
        if (st >= 0) stock = st;
        else cout << "Invalid stock!" << endl;
    }

    //getter of stock
    int getStock() const {
        return stock;
    }

    //display Product details
    void displaySummary() const {
        cout << "Product Name: " << productName << endl;
        cout << "Category: " << category << endl;
        cout << "Price: ?" << price << endl;
        cout << "Stock Available: " << stock << " units" << endl;
    }
};

int main() {
	
    //Creating a product details
    Product prod("Smartphone", "Electronics", 2499.99, 50);

    prod.displaySummary();

    //update and show marks using setter
    prod.setPrice(2299.99);
    prod.setStock(60);

    cout << "\nUpdated Info:" << endl;
    prod.displaySummary();

    return 0;
}
